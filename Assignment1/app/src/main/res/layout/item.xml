<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/parentLayout"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:background="@color/white"
app:dragEdge="right"
app:mode="same_level">

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/hikeEdit"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="match_parent"
        android:background="#2196f3"
        android:gravity="center"
        android:text="Edit"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hikeDelete"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="match_parent"
        android:text="Delete"
        android:gravity="center"
        android:background="#F44336"
        android:textColor="@color/white"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"/>

</LinearLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
        android:id="@+id/mainLayout">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/img_1"
        android:src="@mipmap/ic_mountain"
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:civ_border_color="#FF000000"/>

    <TextView
        android:id="@+id/i_HikeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hike Name"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/img_1"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/i_HikeLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hike Location"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/img_1"
        android:layout_below="@+id/i_HikeName"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/i_HikeDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hike Date"
        android:textSize="20dp"
        android:layout_toRightOf="@+id/img_1"
        android:layout_below="@+id/i_HikeLocation"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        />
</RelativeLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>